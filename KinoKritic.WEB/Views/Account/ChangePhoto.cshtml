@model Profile
<div class="container">
    <h3>Change photo</h3>
    <div class="row">
        <div class="col-8">
            @if (Model.Image != null)
            {
                <img src="@Model.Image" style="max-width: 700px"/>
            }
            else
            {
                <img src="https://i.imgur.com/tPvlEdq.jpg"/>
            }
        </div>
        <div class="col-4">
            <h4>Your photo</h4>
        </div>
    </div>
    <div class="col-12">Update photo</div>
    <div class="col-12">
        <form action="/account/change" method="post" enctype="multipart/form-data">
           <p><input type="file" name="file">
           <input type="submit" value="Отправить"></p>
          </form> 
    </div>
</div>